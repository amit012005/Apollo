{
  "name": "apollo-poll-app",
  "version": "1.0.0",
  "description": "Real-time poll application",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "start": "node server/index.js",
    "build-deploy": "npm install && cd client && npm install --include=dev && npm run build && cd .. && mkdir -p server/public && cp -r client/dist/* server/public/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.6.1",
    "express-rate-limit": "^7.1.5",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}